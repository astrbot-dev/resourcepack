{
    "model": {
        "type": "composite",
        "models": [
            {
                "type": "select",
                "property": "display_context",
                "fallback": {
                    "type": "condition",
                    "property": "using_item",
                    "on_true": {
                        "type": "model",
                        "model": "astrbot:bot/air"
                    },
                    "on_false": {
                        "type": "model",
                        "model": "astrbot:bot/air"
                    }
                },
                "cases": [
                    {
                        "when": "fixed",
                        "model": {
                            "type": "model",
                            "model": "astrbot:bot/air_fly"
                        }
                    }
                ]
            },
            {
                "type": "select",
                "property": "custom_model_data",
                "index": 0,
                "cases": [
                    {
                        "when": "fall_prevention",
                        "model": {
                            "type": "minecraft:model",
                            "model": "astrbot:modules/air_behind/protection"
                        }
                    },
                    {
                        "when": "mending_servicer",
                        "model": {
                            "type": "minecraft:model",
                            "model": "astrbot:modules/air_behind/protection"
                        }
                    },
                    {
                        "when": "active_defence_system",
                        "model": {
                            "type": "minecraft:model",
                            "model": "astrbot:modules/air_behind/ads"
                        }
                    },
                    {
                        "when": "sonic_boom_transmitter",
                        "model": {
                            "type": "minecraft:model",
                            "model": "astrbot:modules/air_behind/sonic_bommer"
                        }
                    },
                    {
                        "when": "m242_bushmaster",
                        "model": {
                            "type": "minecraft:model",
                            "model": "astrbot:modules/air_behind/gun"
                        }
                    }
                ],
                "fallback": {
                    "type": "empty"
                }
            },
            {
                "type": "select",
                "property": "custom_model_data",
                "index": 1,
                "cases": [
                    {
                        "when": "fall_prevention",
                        "model": {
                            "type": "minecraft:model",
                            "model": "astrbot:modules/air_front/protection"
                        }
                    },
                    {
                        "when": "mending_servicer",
                        "model": {
                            "type": "minecraft:model",
                            "model": "astrbot:modules/air_front/protection"
                        }
                    }
                ],
                "fallback": {
                    "type": "empty"
                }
            }
        ]
    }
}